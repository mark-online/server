<?xml version="1.0" encoding="utf-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">
  
  <changeSet author="kcando" id="201207121356">
    <createTable tableName="Guild_Inventories" remarks="Guild inventory table">
     <column name="id" type="dbo.id_t">
        <constraints nullable="false"/>
      </column>
      <column name="guild_id" type="dbo.id_t">
        <constraints nullable="false"/>
      </column>
      <column name="item_code" type="dbo.code_t">
        <constraints nullable="false"/>
      </column>
      <column name="item_count" type="TINYINT">
        <constraints nullable="false"/>
      </column>
      <column name="slot_id" type="SMALLINT">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <addPrimaryKey constraintName="pk_Guild_Inventories" columnNames="id" tableName="Guild_Inventories"/>
    
    <addForeignKeyConstraint constraintName="fk_Guild_Inventories_Guilds"
        baseColumnNames="guild_id" baseTableName="Guild_Inventories"
        referencedColumnNames="id" referencedTableName="Guilds"
        onDelete="NO ACTION" />

  </changeSet>

</databaseChangeLog>
