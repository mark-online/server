<?xml version="1.0" encoding="utf-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">
  
  <changeSet author="kcando" id="201210051405">
    <createTable tableName="Complete_Achievements" remarks="Complete Achievements table">
      <column name="character_id" type="dbo.id_t">
        <constraints nullable="false"/>
      </column>
      <column name="achievement_code" type="dbo.code_t">
        <constraints nullable="false"/>
      </column>
      <column name="complete_at" type="BIGINT">
        <constraints nullable="false"/>
      </column>
    </createTable>
    <addPrimaryKey constraintName="pk_Complete_Achievement" columnNames="character_id, achievement_code" tableName="Complete_Achievements"/>
    

    <addForeignKeyConstraint constraintName="fk_Complete_Achievements_Characters"
        baseColumnNames="character_id" baseTableName="Complete_Achievements"
        referencedColumnNames="id" referencedTableName="Characters"
        onDelete="NO ACTION" />
		

  </changeSet>

</databaseChangeLog>
