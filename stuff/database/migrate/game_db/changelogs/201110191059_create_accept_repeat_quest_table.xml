<?xml version="1.0" encoding="utf-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">
  
  <changeSet author="kcando" id="201110191059">
    <createTable tableName="Accept_Repeat_Quests" remarks="Accept Repeat quest table">
      <column name="character_id" type="dbo.id_t">
        <constraints nullable="false"/>
      </column>
      <column name="quest_code" type="dbo.code_t">
        <constraints nullable="false"/>
      </column>
	  <column name="accept_at" type="SMALLDATETIME">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <addPrimaryKey constraintName="pk_Accept_Repeat_Quests" columnNames="character_id, quest_code" tableName="Accept_Repeat_Quests"/>

    <addForeignKeyConstraint constraintName="fk_Accept_Repeat_Quests_Characters"
        baseColumnNames="character_id" baseTableName="Accept_Repeat_Quests"
        referencedColumnNames="id" referencedTableName="Characters"
        onDelete="NO ACTION" />

  </changeSet>

</databaseChangeLog>
