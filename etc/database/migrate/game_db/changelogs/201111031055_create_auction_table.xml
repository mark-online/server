<?xml version="1.0" encoding="utf-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">
  
  <changeSet author="kcando" id="201111031055">
    <createTable tableName="Auctions" remarks="Auction table">
      <column name="id" type="dbo.id_t">
        <constraints nullable="false"/>
      </column>
	  <column name="zone_id" type="dbo.id_t">
        <constraints nullable="false"/>
      </column>
      <column name="npc_code" type="dbo.code_t">
        <constraints nullable="false"/>
      </column>
	  <column name="seller_id" type="dbo.id_t">
        <constraints nullable="false"/>
      </column>
	  <column name="buyer_id" type="dbo.id_t">
        <constraints nullable="false"/>
      </column>	  
	  <column name="current_bid_money" type="BIGINT">
        <constraints nullable="false"/>
      </column>
	  <column name="buyout_money" type="BIGINT">
        <constraints nullable="false"/>
      </column>
	  <column name="deposit_fee" type="BIGINT">
        <constraints nullable="false"/>
      </column>
	  <column name="expire_at" type="SMALLDATETIME">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <addPrimaryKey constraintName="pk_Auctions" columnNames="id, zone_id" tableName="Auctions"/>

    <addForeignKeyConstraint constraintName="fk_Auctions_Characters"
        baseColumnNames="seller_id" baseTableName="Auctions"
        referencedColumnNames="id" referencedTableName="Characters"
        onDelete="NO ACTION" />

  </changeSet>

</databaseChangeLog>
