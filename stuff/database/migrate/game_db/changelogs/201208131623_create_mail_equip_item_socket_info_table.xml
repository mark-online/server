<?xml version="1.0" encoding="utf-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">
  
  <changeSet author="kcando" id="201208131623">
    <createTable tableName="Mail_Equip_Item_Scoket_Infos" remarks="Mail equip item info table">
      <column name="item_id" type="dbo.id_t">
        <constraints nullable="false"/>
      </column>
      <column name="character_id" type="dbo.id_t">
        <constraints nullable="false"/>
      </column>
      <column name="mail_id" type="dbo.id_t">
        <constraints nullable="false"/>
      </column>
      <column name="socket_slot_id" type="TINYINT" defaultValueNumeric="0">
        <constraints nullable="false"/>
      </column>
      <column name="option_script_1" type="TINYINT" defaultValueNumeric="0">
        <constraints nullable="false"/>
      </column>
      <column name="option_value_1" type="INT" defaultValueNumeric="0">
        <constraints nullable="false"/>
      </column>
      <column name="option_script_2" type="TINYINT" defaultValueNumeric="0">
        <constraints nullable="false"/>
      </column>
      <column name="option_value_2" type="INT" defaultValueNumeric="0">
        <constraints nullable="false"/>
      </column>
      <column name="option_script_3" type="TINYINT" defaultValueNumeric="0">
        <constraints nullable="false"/>
      </column>
      <column name="option_value_3" type="INT" defaultValueNumeric="0">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <addPrimaryKey constraintName="pk_Mail_Equip_Item_Scoket_Infos" columnNames="item_id, socket_slot_id" tableName="Mail_Equip_Item_Scoket_Infos"/>


    <addForeignKeyConstraint constraintName="fk_Mail_Equip_Item_Scoket_Infos_Mail_Inventories"
        baseColumnNames="item_id" baseTableName="Mail_Equip_Item_Scoket_Infos"
        referencedColumnNames="id" referencedTableName="Mail_Inventories"
        onDelete="NO ACTION" />


  </changeSet>

</databaseChangeLog>
