<?xml version="1.0" encoding="utf-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">
  
  <changeSet author="kcando" id="201112141521">
    <createTable tableName="Buildings" remarks="building table">
      <column name="id" type="dbo.id_t">
        <constraints nullable="false"/>
      </column>
      <column name="building_code" type="dbo.code_t">
        <constraints nullable="false"/>
      </column>
      <column name="pos_x" type="REAL">
        <constraints nullable="false"/>
      </column>
      <column name="pos_y" type="REAL">
        <constraints nullable="false"/>
      </column>
      <column name="pos_z" type="REAL">
        <constraints nullable="false"/>
      </column>
      <column name="pos_heading" type="TINYINT">
        <constraints nullable="false"/>
      </column>
      <column name="hp" type="int" defaultValueNumeric="100">
        <constraints nullable="false"/>
      </column> 
      <column name="state" type="tinyint">
        <constraints nullable="false"/>
      </column> 

      <column name="build_at" type="bigint" defaultValueNumeric="0">
        <constraints nullable="false"/>
      </column> 
      <column name="expire_at" type="bigint" defaultValueNumeric="0">
        <constraints nullable="false"/>
      </column> 

      <column name="onwer_type" type="tinyint">
        <constraints nullable="false"/>
      </column> 
      <column name="onwer_character_id" type="dbo.id_t" defaultValueNumeric="0">
        <constraints nullable="false"/>
      </column>
      <column name="onwer_guild_id" type="dbo.id_t" defaultValueNumeric="0">
        <constraints nullable="false"/>
      </column>

    </createTable>

    <addPrimaryKey constraintName="pk_Buildings" columnNames="id" tableName="Buildings"/>

  </changeSet>

</databaseChangeLog>
