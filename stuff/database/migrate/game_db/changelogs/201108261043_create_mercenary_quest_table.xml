<?xml version="1.0" encoding="utf-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">
  
  <changeSet author="kcando" id="201108261043">
    <createTable tableName="Mercenary_Quests" remarks="mercenary quest table">
      <column name="character_id" type="dbo.id_t">
        <constraints nullable="false"/>
      </column>
	  <column name="quest_mission_type" type="TINYINT" defaultValueNumeric="0">
        <constraints nullable="false"/>
      </column>
      <column name="goal_code" type="dbo.code_t" defaultValueNumeric="0">
        <constraints nullable="false"/>
      </column>
      <column name="goal_value" type="TINYINT" defaultValueNumeric="0">
        <constraints nullable="false"/>
      </column>
	  <column name="current_value" type="TINYINT" defaultValueNumeric="0">
        <constraints nullable="false"/>
      </column> 
	  <column name="goal_npc_code" type="dbo.code_t" defaultValueNumeric="0">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <addPrimaryKey constraintName="pk_Mercenary_Quest" columnNames="character_id" tableName="Mercenary_Quests"/>
    <addForeignKeyConstraint constraintName="fk_Mercenary_Quest_Characters"
        baseColumnNames="character_id" baseTableName="Mercenary_Quests"
        referencedColumnNames="id" referencedTableName="Characters"
        onDelete="NO ACTION" />

  </changeSet>

</databaseChangeLog>
