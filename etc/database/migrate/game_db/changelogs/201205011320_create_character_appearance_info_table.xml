<?xml version="1.0" encoding="utf-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">
  
  <changeSet author="kcando" id="201205011320">
    <createTable tableName="Character_Appearance_Infos" remarks="appearance table">
      <column name="account_id" type="dbo.id_t">
        <constraints nullable="false"/>
      </column>
      <column name="character_id" type="dbo.id_t">
        <constraints nullable="false"/>
      </column>
      <column name="hair" type="tinyint">
        <constraints nullable="false"/>
      </column>
      <column name="face" type="tinyint">
        <constraints nullable="false"/>
      </column>
      <column name="eyes" type="tinyint">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <addPrimaryKey constraintName="pk_Character_Appearance_Infos" columnNames="account_id, character_id" tableName="Character_Appearance_Infos"/>

    <addForeignKeyConstraint constraintName="fk_Character_Appearance_Infos_Characters"
        baseColumnNames="character_id" baseTableName="Character_Appearance_Infos"
        referencedColumnNames="id" referencedTableName="Characters"
        onDelete="NO ACTION" />

  </changeSet>

</databaseChangeLog>
