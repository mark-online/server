<?xml version="1.0" encoding="utf-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd">
  
  <changeSet author="kcando" id="201202211636">
    <createTable tableName="Vehicle_Infos" remarks="Vehicle table">
      <column name="account_id" type="dbo.id_t">
        <constraints nullable="false"/>
      </column>
      <column name="character_id" type="dbo.id_t">
        <constraints nullable="false"/>
      </column>
      <column name="id" type="dbo.id_t">
        <constraints nullable="false"/>
      </column>
      <column name="vehicle_code" type="dbo.code_t">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <addPrimaryKey constraintName="pk_Vehicle_Infos" columnNames="id" tableName="Vehicle_Infos"/>
    <createIndex indexName="ix_Vehicle_Infos_account_id" tableName="Vehicle_Infos">
      <column name="account_id"/>
    </createIndex>
    <createIndex indexName="ix_Vehicle_Infos_character_id" tableName="Vehicle_Infos">
      <column name="character_id"/>
    </createIndex>

    <addForeignKeyConstraint constraintName="fk_Vehicle_Infos_Characters"
        baseColumnNames="character_id" baseTableName="Vehicle_Infos"
        referencedColumnNames="id" referencedTableName="Characters"
        onDelete="NO ACTION" />

  </changeSet>

</databaseChangeLog>
